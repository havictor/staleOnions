{{#each savedArticle}}
    <section class="section">
        <div class="container">
            <a href={{this.link}} target="_blank">
                <h1 class="title">{{this.title}}</h1>

                <h2 class="subtitle">
                    {{this.summary}}
                </h2>
            </a>

            <a class="button is-dark commentButton" data-id={{this._id}}>
                <span class="icon is-small" data-id={{this._id}}>
                    <i class="fas fa-comment" data-id={{this._id}}></i>
                </span>
                <span data-id={{this._id}}>Comment</span>
            </a>   
            <a class="button is-danger deleteButton" data-id={{this._id}}>
                <span class="icon is-small">
                    <i class="fas fa-window-close"></i>
                </span>
                <span>Delete</span>
            </a>  
        </div>
    </section>
{{/each}}
<div class="modal">
  <div class="modal-background closeModal"></div>
  <div class="modal-content">
    <div>
        <h3 id="modalTitle" class="notification"></h3>
    </div>
    <div class="control">
        <textarea class="textarea" type="text" id="modalNote" disabled></textarea>
    </div>
    <div class="field">
        <div class="control">
            <input class="input" type="text" placeholder="New Comment" id="modalEntry">
        </div>
    </div>
    <a class="button is-success" id="saveComment">Save Comment</a>

    <a class="button is-danger" id="deleteComment">Delete Comment</a>
  </div>
  <button class="modal-close is-large closeModal" aria-label="close"></button>
</div>